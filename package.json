{
  "name": "barrel-loader",
  "version": "0.1.5",
  "description": "High-performance barrel file loader for webpack/rspack using Rust NAPI bindings",
  "license": "ISC",
  "author": "Arpit Arya <arpitarya@users.noreply.github.com>",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.cjs",
      "require": "./dist/index.cjs"
    },
    "./barrel-loader-utils": {
      "types": "./dist/barrel-loader-utils.d.cts",
      "import": "./dist/barrel-loader-utils.cjs",
      "require": "./dist/barrel-loader-utils.cjs"
    }
  },
  "files": [
    "dist/",
    "native/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arpitarya/barrel-loader.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "keywords": [
    "barrel",
    "loader",
    "webpack",
    "rspack",
    "rust",
    "native",
    "addon",
    "performance",
    "optimization"
  ],
  "scripts": {
    "build": "pnpm build:rust && pnpm build:ts",
    "build:rust": "./build.sh",
    "build:ts": "rslib build",
    "build:debug": "./build.sh --debug",
    "build:clean": "./build.sh --clean",
    "clean": "./clean.sh",
    "clean:deps": "./clean.sh --deps",
    "clean:all": "./clean.sh --all",
    "clean:verbose": "./clean.sh --verbose",
    "test": "node test.cjs",
    "test:rust": "cargo test",
    "lint": "biome lint src && pnpm lint:rust",
    "lint:ts": "biome lint src",
    "lint:rust": "cargo clippy --all-targets -- -D warnings",
    "lint:fix": "biome lint --write src && cargo clippy --all-targets --fix --allow-dirty --allow-staged",
    "fmt": "biome format --write src && pnpm fmt:rust",
    "fmt:ts": "biome format --write src",
    "fmt:rust": "cargo fmt --all",
    "fmt:check": "biome format src && cargo fmt --all -- --check",
    "check": "biome check --write src",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@rslib/core": "^0.19.6",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.28.2"
}
