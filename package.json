{
  "name": "barrel-loader",
  "version": "0.1.5",
  "description": "High-performance barrel file loader for webpack/rspack using Rust NAPI bindings",
  "license": "ISC",
  "author": "Arpit Arya <arpitarya@users.noreply.github.com>",
  "type": "module",
  "main": "./index.cjs",
  "types": "./index.d.cts",
  "exports": {
    ".": {
      "types": "./index.d.cts",
      "import": "./index.cjs",
      "require": "./index.cjs"
    },
    "./barrel-loader-utils": {
      "types": "./barrel-loader-utils.d.cts",
      "import": "./barrel-loader-utils.cjs",
      "require": "./barrel-loader-utils.cjs"
    }
  },
  "files": [
    "index.cjs",
    "index.d.cts",
    "barrel-loader-utils.cjs",
    "barrel-loader-utils.d.cts",
    "native/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arpitarya/barrel-loader.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "barrel",
    "loader",
    "webpack",
    "rspack",
    "rust",
    "native",
    "addon",
    "performance",
    "optimization"
  ],
  "scripts": {
    "build": "node -e \"const script = process.platform === 'win32' ? 'build.bat' : './build.sh'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "build:debug": "node -e \"const script = process.platform === 'win32' ? 'build.bat --debug' : './build.sh --debug'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "build:clean": "node -e \"const script = process.platform === 'win32' ? 'build.bat --clean' : './build.sh --clean'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "clean": "node -e \"const script = process.platform === 'win32' ? 'clean.bat' : './clean.sh'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "clean:deps": "node -e \"const script = process.platform === 'win32' ? 'clean.bat --deps' : './clean.sh --deps'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "clean:all": "node -e \"const script = process.platform === 'win32' ? 'clean.bat --all' : './clean.sh --all'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "clean:verbose": "node -e \"const script = process.platform === 'win32' ? 'clean.bat --verbose' : './clean.sh --verbose'; require('child_process').execSync(script, { stdio: 'inherit' })\"",
    "test": "node test.cjs",
    "lint": "cargo clippy --all-targets -- -D warnings",
    "lint:fix": "cargo clippy --all-targets --fix --allow-dirty --allow-staged",
    "fmt": "cargo fmt --all",
    "fmt:check": "cargo fmt --all -- --check",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {},
  "packageManager": "pnpm@10.28.2"
}
